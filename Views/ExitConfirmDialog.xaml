<Window x:Class="Encrypto.Views.ExitConfirmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exit Encrypto"
        Width="420"
        Height="220"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        KeyDown="Window_KeyDown">

    <Border Background="#0F1722"
            BorderBrush="#1E2A3A"
            BorderThickness="1"
            CornerRadius="18"
            Padding="24">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <StackPanel Grid.Row="0">
                <TextBlock Text="Exit Encrypto"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Foreground="#E6EDF3"/>

                <TextBlock Text="Are you sure you want to close the application?"
                           FontSize="14"
                           Foreground="#9CA3AF"
                           Margin="0,8,0,0"/>
            </StackPanel>

            <!-- BUTTONS -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,20,0,0">

                <Button Content="Cancel"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Width="100"
                        Margin="0,0,12,0"
                        Click="Cancel_Click"/>

                <Button Content="Exit"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Width="100"
                        Click="Exit_Click"/>
            </StackPanel>
        </Grid>

    </Border>
</Window>