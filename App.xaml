<Application x:Class="Encrypto.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">

    <Application.Resources>

        <!-- ================= BASE NAV BUTTON ================= -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0C1420"/>
            <Setter Property="Foreground" Value="#C9D1D9"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="46"/>
            <Setter Property="Margin" Value="0,6"/>
            <Setter Property="Padding" Value="18,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Tag" Value="inactive"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                CornerRadius="14">
                            <Grid>
                                <Border x:Name="Indicator"
                                        Width="4"
                                        HorizontalAlignment="Left"
                                        Background="Transparent"
                                        CornerRadius="2"/>
                                <ContentPresenter Margin="14,0,0,0"
                                                  VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#111B2A"/>
                                <Setter Property="Foreground" Value="#E6EDF3"/>
                            </Trigger>

                            <Trigger Property="Tag" Value="active">
                                <Setter TargetName="Root" Property="Background" Value="#0F1722"/>
                                <Setter TargetName="Indicator" Property="Background" Value="#7CFFB2"/>
                                <Setter Property="Foreground" Value="#E6EDF3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ================= INPUT FIELD ================= -->
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Background" Value="#0B0F14"/>
            <Setter Property="Foreground" Value="#E6EDF3"/>
            <Setter Property="BorderBrush" Value="#263445"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CaretBrush" Value="#7CFFB2"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#7CFFB2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ================= SECONDARY BUTTON ================= -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="18,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#E6EDF3"/>
            <Setter Property="Background" Value="#111B2A"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                        Background="{TemplateBinding Background}"
                        CornerRadius="12">
                            <ContentPresenter
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root"
                                Property="Background"
                                Value="#1A2A40"/>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root"
                                Property="Background"
                                Value="#223552"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ================= STATUS PILL ================= -->
        <Style x:Key="StatusPillStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="999"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Background" Value="#111B2A"/>
            <Setter Property="Opacity" Value="0"/>
        </Style>

        <Style x:Key="StatusTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#7CFFB2"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <!-- ================= PRIMARY ACTION BUTTON ================= -->
        <Style x:Key="PrimaryButtonStyle"
       TargetType="Button"
       BasedOn="{StaticResource SecondaryButtonStyle}">
            <Setter Property="Background" Value="#7CFFB2"/>
            <Setter Property="Foreground" Value="#0B0F14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                        Background="{TemplateBinding Background}"
                        CornerRadius="12">
                            <ContentPresenter
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root"
                                Property="Background"
                                Value="#5FE39A"/>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root"
                                Property="Background"
                                Value="#46C984"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ================= DANGER NAV BUTTON ================= -->
        <Style x:Key="DangerNavButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource NavButtonStyle}">
            <Setter Property="Foreground" Value="#FF9A9A"/>
        </Style>

        <!-- ================= PAGE HEADER ================= -->
        <Style x:Key="PageHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#E6EDF3"/>
        </Style>

        <Style x:Key="PageSubHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#9CA3AF"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
        </Style>

        <!-- ================= FORM LABEL ================= -->
        <Style x:Key="FormLabelTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#A7B2C1"/>
            <Setter Property="Margin" Value="4,0,0,6"/>
        </Style>

        <!-- ================= PASSWORD BOX ================= -->
        <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#E6EDF3"/>
            <Setter Property="Background" Value="#0B0F14"/>
            <Setter Property="BorderBrush" Value="#263445"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="Border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="12">
                            <ScrollViewer x:Name="PART_ContentHost"
                                  VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Border"
                                Property="BorderBrush"
                                Value="#7CFFB2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ================= PAGE CONTAINER ================= -->
        <Style x:Key="PageRootGridStyle" TargetType="Grid">
            <Setter Property="Margin" Value="48"/>
        </Style>
        
    </Application.Resources>
</Application>